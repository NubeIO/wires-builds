  "scripts": {
    "prestart": "npm run updateEnv",
    "start": "node dist/app.js",
    "start:dev-server": "npm run updateEnv && cross-env NODE_ENV=development node dist/app.js",
    "start:dev-client": "npm run updateEnv && cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "prebuild": "npm run updateEnv:prod && tsc",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "postbuild": "cross-env NODE_ENV=$NODE_ENV node buildSrc/distribute.js",
    "test": "jest",
    "prestart:prod": "npm run delete:prod && npm run updateEnv:prod",
    "prestart:prod:nolog": "npm run delete:prod && npm run updateEnv:prod",
    "start:prod": "cross-env NODE_ENV=production pm2 start dist/app.js",
    "start:prod:nolog": "cross-env NODE_ENV=production pm2 start dist/app.js -o /dev/null -e /dev/null",
    "stop:prod": "pm2 stop --silent app &",
    "delete:prod": "pm2 delete --silent app &",
    "install:pm2-logrotate": "pm2 install pm2-logrotate",
    "uninstall:pm2-logrotate": "pm2 uninstall pm2-logrotate",
    "status:prod": "pm2 status",
    "save:prod": "pm2 save",
    "startup:prod": "pm2 startup",
    "unstartup:prod": "pm2 unstartup",
    "pm2": "pm2",
    "updateEnv": "node buildSrc/updateEnv.js && tsc",
    "updateEnv:prod": "node buildSrc/updateEnv.js --prod"
  },
